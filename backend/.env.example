# Environment
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/qari_db
REDIS_URL=redis://redis:6379/0

# AWS S3 (for audio storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=qari-app-audio

# OpenAI (for Whisper API - optional, can use local)
OPENAI_API_KEY=your_openai_api_key

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Audio Processing
MAX_AUDIO_DURATION_SECONDS=120
AUDIO_SAMPLE_RATE=16000

# Model Paths
WHISPER_MODEL_SIZE=large-v2
MODEL_CACHE_DIR=/app/models/cache

# TTS (optional)
TTS_PROVIDER=local  # local, google, amazon
GOOGLE_TTS_API_KEY=your_google_tts_key
AMAZON_POLLY_REGION=us-east-1

# Tajweed Analysis
MADD_SHORT_THRESHOLD=0.05
MADD_NORMAL_MIN=0.18
MADD_NORMAL_MAX=0.25
GHUNNAH_MIN_DURATION=0.12
CONFIDENCE_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
